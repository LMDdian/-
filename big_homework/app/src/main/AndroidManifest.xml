<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Big_homework"
        tools:targetApi="31" >


        <!-- MainActivity应用主界面，提供导航功能 -->
        <activity android:name=".LoginActivity"
            android:exported="true"
            android:label="大作业">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginActivity登录功能 -->
        <activity android:name=".MainActivity" android:label="大作业"/>

        <!-- RegisterActivity注册共嗯那个 -->
        <activity android:name=".RegisterActivity" android:label="大作业"/>

        <!-- NoteListActivity记事本功能记事本列表 -->
        <activity android:name=".NoteListActivity" android:label="大作业"/>

        <!-- NoteEditActivity记事本功能编辑添加共嗯那个 -->
        <activity android:name=".NoteEditActivity" android:label="大作业"/>

        <!-- MusicPlayerActivity音乐播放器功能 -->
        <activity android:name=".MusicPlayerActivity" android:label="大作业"/>

        <!-- CalculatorActivity计算机功能 -->
        <activity android:name=".CalculatorActivity" android:label="大作业"/>
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        tools:ignore="ManifestOrder"
        android:maxSdkVersion="32" />
</manifest>